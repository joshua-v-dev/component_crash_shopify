  "version": "1.0.0",
  "description": "Shopify's node app for CLI tool",
  "main": "index.js",
  "type":"module",
  "exports": {
    ".": {
      "browser": "./dist/index.module.js",
      "umd": "./dist/index.umd.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.module.js"
    }
  },
  "scripts": {
    "eslint": "eslint",
    "prettier": "prettier",
